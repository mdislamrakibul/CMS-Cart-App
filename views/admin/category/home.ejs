<!DOCTYPE html>
<html lang="en">
<%- include('../../layout/admin/header') %>

<body class="fixed-nav sticky-footer bg-dark" id="page-top">
<!-- Navigation-->
<%- include('../../layout/admin/nav') %>
<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/admin">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Category</li>
        </ol>
        <!--main-->
        <div>
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fa fa-table"></i> Data - Category</div>
                <div class="card-body">
                    <% if(success_message.length) {%>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong><%= success_message %></strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% } %>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Title</th>
                                <th>Slug</th>
                                <th>Created Time</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if (category.length) { %>
                                <% category.forEach(function(cats){ %>
                                    <tr>
                                        <td><%= cats.title %></td>
                                        <td><%= cats.slug %></td>
                                        <td><%= cats.created_time %></td>
                                        <td>
                                            <a href="/admin/category/edit/<%= cats.slug %>" class="btn btn-sm btn-outline-primary">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="/admin/category/delete/<%= cats.slug %>" class="btn btn-sm btn-outline-danger">
                                                <i class="fa fa-eraser"></i>
                                            </a>

                                        </td>
                                    </tr>
                                <% }) %>

                            <% } else { %>
                                <div class="ml-4">
                                    <div class="alert alert-danger" role="alert">
                                        <h4 class="alert-heading">Warning!</h4>
                                        <p>Thank You. But at this moment no category is available.</p>
                                        <hr>
                                    </div>
                                </div>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!--<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>-->
            </div>
        </div>
        <!--main-->
    </div>
    <!-- /.container-fluid-->

    <%- include('../../layout/admin/footer') %>
    <%- include('../../layout/admin/script') %>
</div>
</body>

</html>
