<!DOCTYPE html>
<html lang="en">
<%- include('../../layout/admin/header') %>

<body class="fixed-nav sticky-footer bg-dark" id="page-top">
<!-- Navigation-->
<%- include('../../layout/admin/nav') %>
<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Product</li>
        </ol>
        <!--main-->
        <div>
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fa fa-table"></i> Data - Product</div>
                <div class="card-body">
                    <% if(success_message.length) {%>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong><%= success_message %></strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% } %>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Title</th>
                                <th>Slug</th>
                                <th>Description</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Image</th>
                                <th>Created Time</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if (product.length) { %>
                                <% product.forEach(function(prods){ %>
                                    <tr>
                                        <td><%= prods.title%></td>
                                        <td><%= prods.slug %></td>
                                        <td><%= prods.description%> </td>
                                        <td><%= prods.category%></td>
                                        <td>$ <%= prods.price%></td>
                                        <td>
                                            <img src="/uploads/<%= prods._id%>/<%= prods.image%>"
                                                 alt="<%= prods.title%>" width="150px" height="100px">

                                        </td>
                                        <td><%= prods.created_time%></td>
                                        <td style="display: flex">
                                            <a href="/admin/product/edit/<%= prods.slug%>" class="btn btn-sm btn-outline-primary"><i class="fa fa-edit"></i></a>
                                            <a href="/admin/product/delete/<%= prods.slug%>" class="btn btn-sm btn-outline-danger"><i class="fa fa-eraser"></i></a>

                                        </td>
                                    </tr>
                                <% }) %>

                            <% } else { %>
                                <div class="ml-4">
                                    <div class="alert alert-danger" role="alert">
                                        <h4 class="alert-heading">Warning!</h4>
                                        <p>Thank You. But at this moment no Product is available.</p>
                                        <hr>
                                    </div>
                                </div>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!--<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>-->
            </div>
        </div>
        <!--main-->
    </div>
    <!-- /.container-fluid-->

    <%- include('../../layout/admin/footer') %>
</div>
</body>

</html>
